{
  "name": "mirror-server",
  "version": "0.0.1",
  "scripts": {
    "build:dev": "rimraf ./lib/**/* && tsc --watch",
    "build": "rimraf ./lib/**/* && npm run lint && unbuild",
    "serve:dev": "npx firebase-tools emulators:start --only functions",
    "serve": "npm run build && npx firebase-tools emulators:start --only functions",
    "shell": "npx firebase-tools functions:shell",
    "start": "npm run build && npm run shell",
    "deploy-functions-staging": "npx firebase-tools deploy --project staging --only functions",
    "deploy-functions-prod": "npx firebase-tools deploy --project prod --only functions",
    "logs-staging": "npx firebase-tools --project staging functions:log",
    "logs-prod": "npx firebase-tools --project prod functions:log",
    "format": "prettier --write *",
    "check-format": "prettier --check *",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/"
  },
  "main": "lib/index.mjs",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.2.0",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.4.0",
    "tslib": "^2.5.2"
  },
  "devDependencies": {
    "@rocicorp/eslint-config": "^0.4.1",
    "@rocicorp/prettier-config": "^0.1.1",
    "@types/busboy": "^1.5.0",
    "@types/cors": "^2.8.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "isolate-package": "^1.1.1",
    "mirror-protocol": "*",
    "rollup": "^3.19.1",
    "rollup-plugin-dts": "^5.2.0",
    "shared": "*",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.1"
  },
  "peerDependencies": {
    "firebase-tools": "^12.3.0"
  },
  "private": true,
  "engines": {
    "node": "18"
  },
  "files": [
    "lib"
  ],
  "eslintConfig": {
    "extends": "@rocicorp/eslint-config"
  },
  "prettier": "@rocicorp/prettier-config",
  "type": "module"
}
