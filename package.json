{
  "name": "@rocicorp/mono",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "download-deps": "bash ./deps/download.sh",
    "// would be preinstall - replace with prebuild binaries of custom sqlite3": "cd npm-sandbox && npm add better-sqlite3@11.1.2 --no-workspaces --no-save --build-from-source --sqlite3=\"$(pwd)/../deps/sqlite3\"",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check-format": "turbo run check-format",
    "check-types": "turbo run check-types",
    "build-ci": "npm install && turbo run build",
    "start-zero-cache": "cd packages/zero-cache && npm run start"
  },
  "devDependencies": {
    "@rocicorp/eslint-config": "^0.5.1",
    "@rocicorp/prettier-config": "^0.2.0",
    "prettier": "^3.0.3",
    "syncpack": "^12.3.2",
    "turbo": "^1.13.2",
    "vitest": "^2.0.3"
  },
  "eslintConfig": {
    "extends": "@rocicorp/eslint-config"
  },
  "prettier": "@rocicorp/prettier-config"
}
