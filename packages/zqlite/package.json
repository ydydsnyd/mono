{
  "name": "zqlite",
  "description": "SQLite source provider for ZQL (for use on the server)",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-types": "tsc",
    "check-types:watch": "tsc --watch",
    "build:bin": "tsc -p tsconfig.bin.json",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "bench": "vitest bench",
    "test-types": "vitest run --typecheck.only --no-browser.enabled",
    "test-types:watch": "vitest watch --typecheck.only --no-browser.enabled"
  },
  "devDependencies": {
    "@rocicorp/eslint-config": "^0.5.1",
    "@rocicorp/logger": "^5.3.0",
    "@rocicorp/prettier-config": "^0.2.0",
    "fast-check": "^3.18.0",
    "nanoid": "^4.0.2",
    "playwright": "^1.43.1",
    "shared": "0.0.0",
    "typescript": "^5.6.3"
  },
  "eslintConfig": {
    "extends": "../../eslint-config.json"
  },
  "prettier": "@rocicorp/prettier-config",
  "dependencies": {
    "@databases/escape-identifier": "^1.0.3",
    "@databases/sql": "^3.3.0",
    "@rocicorp/logger": "^5.3.0",
    "@rocicorp/zero-sqlite3": "^1.0.4",
    "pg-logical-replication": "^2.0.7",
    "zql": "0.0.0"
  }
}
