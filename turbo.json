{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["out/**", "dist/**", ".next/**", "next-env.d.ts"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "../zero-cache/src/**/*.ts",
        "../zero-client/src/**/*.ts",
        "../zero-advanced/src/**/*.ts",
        "../zero-react/src/**/*.ts",
        "../zero-solid/src/**/*.ts",
        "../zero-schema/src/**/*.ts"
      ]
    },
    "lint": {
      "outputs": []
    },
    "format": {},
    "check-format": {
      "outputs": []
    },
    "dev": {
      "cache": true
    },
    "test": {
      "dependsOn": ["^test", "build"]
    },
    "test:watch": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types", "build"],
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "../zero-client/src/**/*.ts",
        "../zero-react/src/**/*.ts",
        "../zero-cache/src/**/*.ts"
      ]
    }
  }
}
